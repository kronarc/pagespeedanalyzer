generator client {
  provider = "prisma-client-js"
  output   = "../.prisma/client"
}

datasource db {
  provider = "postgresql"
}

// NextAuth.js Models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  analyses   Analysis[]
  usageLogs  UsageLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Core domain models
model Analysis {
  id        String   @id @default(cuid())
  userId    String
  url       String
  deviceType String  // "mobile" | "desktop"

  // Lighthouse scores
  performanceScore    Int?
  accessibilityScore  Int?
  bestPracticesScore  Int?
  seoScore           Int?
  speedIndex         Float?

  // Core Web Vitals (in milliseconds or units)
  lcp               Float?  // Largest Contentful Paint
  cls               Float?  // Cumulative Layout Shift
  inp               Float?  // Interaction to Next Paint
  fcp               Float?  // First Contentful Paint
  ttfb              Float?  // Time to First Byte

  // CrUX ratings (if available)
  lcpRating         String?  // "good" | "needs improvement" | "poor"
  clsRating         String?
  inpRating         String?
  fcpRating         String?
  ttfbRating        String?

  // Lighthouse audit data (stored for all users)
  lighthouseJson    String?  @db.Text // JSON string of full Lighthouse report

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
}

model UsageLog {
  id        String   @id @default(cuid())
  userId    String?
  ipAddress String?
  date      DateTime @default(now()) @db.Date
  count     Int      @default(1)

  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([date])
  @@index([ipAddress, date])
}
